//- Button Component
//- Usage: +button('Click me')
//- Usage: +button('Submit', { variant: 'primary' })
//- Usage: +button('Cancel', { variant: 'secondary', size: 'sm' })

mixin button(text, options = {})
  -
    const variant = options.variant || 'primary'
    const size = options.size || 'md'
    const type = options.type || 'button'
    const disabled = options.disabled || false
    const icon = options.icon || null
    const iconPosition = options.iconPosition || 'left'
    const fullWidth = options.fullWidth || false

    let classes = ['btn', `btn--${variant}`, `btn--${size}`]
    if (fullWidth) classes.push('btn--full')
    if (disabled) classes.push('btn--disabled')
    if (icon) classes.push('btn--icon')

  button(
    type=type
    class=classes.join(' ')
    disabled=disabled
    ...attributes
  )
    if icon && iconPosition === 'left'
      span.btn__icon
        != icon
    span.btn__text= text
    if icon && iconPosition === 'right'
      span.btn__icon
        != icon
