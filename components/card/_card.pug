//- Card Component
//- Usage: +card()
//-          p Card content here
//- Usage: +card({ variant: 'elevated' })
//- Usage: +card({ padding: 'lg' })

mixin card(options = {})
  -
    const variant = options.variant || 'default'
    const padding = options.padding || 'md'
    const interactive = options.interactive || false

    let classes = ['card', `card--${variant}`, `card--pad-${padding}`]
    if (interactive) classes.push('card--interactive')

  .card(class=classes.join(' ') ...attributes)
    if block
      block
