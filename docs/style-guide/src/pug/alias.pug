doctype html
html(lang="en")
	include partials/_head

	body
		//- Skip link for keyboard users
		a.skip-link(href="#main-content") Skip to main content

		//- Aria-live region for copy announcements
		div#copy-announcement.sr-only(aria-live="polite" aria-atomic="true")

		include partials/_header
		include partials/_hero

		main#main-content
			section.section
				.section__content
					include partials/_mixins
					.grid.grid--10.token-grid
						+tokenHeader('Section', 'Group', 'Visual', 'Token', 'Value')
					include partials/_alias
					include partials/_typography
					include partials/_spacing
					include partials/_radius

		include partials/_footer
