include _mixins

//- ===========================================
//- BASE TOKENS
//- Colors, Type Scale, UI Scale, Typography, Radius
//- ===========================================

//- ===== TYPE SCALE =====
.subsection#type-scale
	.grid.grid--10.scale-grid
		+tokenHeader('Section', 'Group', 'Visual', 'Token', 'Value')
		+scaleRow('Type Scale', 'Base', 8, 'type.8', '8px')
		+scaleRow('', '', 10, 'type.10', '10px')
		+scaleRow('', '', 12, 'type.12', '12px')
		+scaleRow('', '', 14, 'type.14', '14px')
		+scaleRow('', '', 20, 'type.20', '20px')
		+scaleRow('', '', 28, 'type.28', '28px')
		+scaleRow('', '', 32, 'type.32', '32px')

//- ===== UI SCALE =====
.subsection#ui-scale
	.grid.grid--10.scale-grid
		+scaleRow('UI Scale', '8pt Grid', 0, 'ui.0', '0px')
		+scaleRow('', '', 2, 'ui.2', '2px')
		+scaleRow('', '', 4, 'ui.4', '4px')
		+scaleRow('', '', 8, 'ui.8', '8px')
		+scaleRow('', '', 16, 'ui.16', '16px')
		+scaleRow('', '', 24, 'ui.24', '24px')
		+scaleRow('', '', 32, 'ui.32', '32px')
		+scaleRow('', '', 40, 'ui.40', '40px')
		+scaleRow('', '', 48, 'ui.48', '48px')
		+scaleRow('', '', 64, 'ui.64', '64px')
		+scaleRow('', '', 72, 'ui.72', '72px')

//- ===== RADIUS =====
.subsection#radius
	.grid.grid--10.radius-grid
		+radiusRow('Radius', 'Container', 'none', 'radius.none', '0px')
		+radiusRow('', '', 'sm', 'radius.sm', '4px')
		+radiusRow('', '', 'md', 'radius.md', '8px')
		+radiusRow('', '', 'lg', 'radius.lg', '12px')
		+radiusRow('', '', 'full', 'radius.full', '999px')

//- ===== COLORS =====
include _colors
