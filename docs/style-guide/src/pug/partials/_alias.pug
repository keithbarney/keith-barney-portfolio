include _mixins

//- Dynamic alias row with light/dark base values
mixin aliasRowDynamic(sectionTitle, groupTitle, swatchClass, token, baseLight, baseDark)
	span.alias-token__section.col-span-2= sectionTitle
	span.alias-token__group.col-span-2= groupTitle
	.alias-token__visual.col-span-2
		.alias-token__swatch(class=`alias-swatch--${swatchClass}`)
	span.alias-token__alias.col-span-2
		span.token-copy(tabindex="0" role="button" aria-label=`Copy ${token}` onclick=`copyToken('${token}', this)` onkeydown=`handleCopyKeydown(event, '${token}', this)`)
			span.token-name= token
			span.copy-icon
				svg(width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true")
					rect(x="9" y="9" width="13" height="13" rx="2" ry="2")
					path(d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1")
	span.alias-token__base.col-span-2
		span.base-value.base-value--light= baseLight
		span.base-value.base-value--dark= baseDark

.subsection#alias
	.grid.grid--10.alias-grid
		//- Background
		span.alias-token__section.col-span-2 UI
		span.alias-token__group.col-span-2 Background
		.alias-token__visual.col-span-2
			.alias-token__swatch.alias-swatch--bg-default
		span.alias-token__alias.col-span-2
			span.token-copy(tabindex="0" role="button" aria-label="Copy ui.bg.default" onclick="copyToken('ui.bg.default', this)" onkeydown="handleCopyKeydown(event, 'ui.bg.default', this)")
				span.token-name ui.bg.default
				span.copy-icon
					svg(width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true")
						rect(x="9" y="9" width="13" height="13" rx="2" ry="2")
						path(d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1")
		span.alias-token__base.col-span-2
			span.base-value.base-value--light gray.50
			span.base-value.base-value--dark gray.950

		//- Surface
		+aliasRowDynamic('', 'Surface', 'surface-default', 'ui.surface.default', 'gray.100', 'gray.900')

		//- Border
		+aliasRowDynamic('', 'Border', 'border-default', 'ui.border.default', 'gray.100', 'gray.900')
		+aliasRowDynamic('', '', 'border-strong', 'ui.border.strong', 'gray.50', 'gray.950')

		//- Text
		+aliasRowDynamic('', 'Text', 'text-default', 'ui.text.default', 'gray.700', 'gray.200')
		+aliasRowDynamic('', '', 'text-strong', 'ui.text.strong', 'gray.900', 'gray.50')
		+aliasRowDynamic('', '', 'text-disabled', 'ui.text.disabled', 'gray.300', 'gray.600')

		//- Action
		+aliasRowDynamic('', 'Action', 'action-primary', 'ui.action.primary', 'red.400', 'red.500')
		+aliasRowDynamic('', '', 'action-primary-hover', 'ui.action.primary-hover', 'red.300', 'red.400')
		+aliasRowDynamic('', '', 'action-primary-active', 'ui.action.primary-active', 'red.300', 'red.400')

		//- Feedback
		+aliasRowDynamic('', 'Feedback', 'feedback-success', 'ui.feedback.success', 'green.600', 'green.400')
		+aliasRowDynamic('', '', 'feedback-warning', 'ui.feedback.warning', 'orange.400', 'orange.300')
		+aliasRowDynamic('', '', 'feedback-danger', 'ui.feedback.danger', 'red.600', 'red.400')
		+aliasRowDynamic('', '', 'feedback-info', 'ui.feedback.info', 'teal.600', 'teal.400')
