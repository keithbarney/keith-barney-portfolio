doctype html
html(lang="en")
	include partials/_head

	body
		//- Skip link for keyboard users
		a.skip-link(href="#main-content") Skip to main content

		//- Aria-live region for copy announcements
		div#copy-announcement.sr-only(aria-live="polite" aria-atomic="true")

		include partials/_header
		include partials/_hero

		main#main-content
			section.section
				.section__content
					include partials/_mixins
					include partials/_base

		include partials/_footer
